<div class="space-y-5 px-10">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),  class: "mb-7") do |f| %>
    <div>
      <%= f.label :email, class: "font-bold text-white text-2xl" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "inline-block w-96 px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none" %>
    </div><br/>

    <div>
      <%= f.label :password, class: "font-bold text-white text-2xl" %><br />
      <%= f.password_field :password, autocomplete: "current-password" ,class: "inline-block w-96 px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field text-white inline-block w-96 px-3 py-2 mt-2 shadow rounded-md">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" , class: "btn py-2 ml-2 bg-orange-600 text-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
