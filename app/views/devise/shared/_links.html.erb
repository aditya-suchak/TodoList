<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class:"field text-white inline-block w-55 px-2 py-1 mt-1 shadow rounded-md" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class:"field text-white inline-block w-55 px-2 py-1 mt-1 shadow rounded-md" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "field text-white inline-block w-55 px-2 py-1 mt-1 shadow rounded-md" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"text-white" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class:"text-white" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="rounded-xl shadow-lg flex items-center space-x-2 ml-1">
    <p class="field text-white inline-block w-55 px-2 py-1 shadow rounded-md">Sign up with</p>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%- if OmniAuth::Utils.camelize(provider).eql?("GitHub") %>
        <div class="w-10 h-10 rounded-lg flex items-center justify-center ml-3">
          <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class:"text-white" do %>
            <%= image_tag('github-mark-white.png', alt: 'GitHub Logo', class: 'w-full h-full') %>
          <% end %>
        </div>
      <%- else %>
          <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class:"text-white" %><br />
      <%- end %>
    <% end %>
  </div>
<% end %>
