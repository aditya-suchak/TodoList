<turbo-frame id="<%= dom_id task %>" class="block">
<div class="block">
  <%= form_with(model: task, url: tasks_path, class:"text-lg inline-block my-3 w-72 text-white") do |form| %>
    <%= form.check_box :completed,
                       data: {
                         id: task.id,
                         action: "tasks#toggle"
                       },
                       class: "rounded bg-gray-600 mr-2 align-middle checked:bg-gray-400" %>
    <%= task.description %>
  <% end %>

  <%= link_to edit_task_path(task), class: "btn bg-gray-100" do %>
    Edit
  <% end %>


  <div class="inline-block ml-2">
    <%= button_to "Delete", task_path(task), method: :delete, data: { "turbo-frame": "_top" }, class: "btn bg-red-100" %>
  </div>
</div>
</turbo-frame>
