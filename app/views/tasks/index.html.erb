<div class="space-y-5 px-10">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-white text-2xl">Task Manager</h1>

  <div class="mt-4">
    <%= render "form", task: @task %>
  </div>

  <div id="tasks">
   <h1 class="font-bold text-white text-lg mb-7">Pending Tasks</h1>

    <div class="px-5" data-controller="tasks">
      <%= render @tasks %>
    </div>
  </div>

  <div id="ctasks">
    <h1 class="font-bold text-white text-lg mb-7">Completed Tasks</h1>

      <div class="px-5 py-5" data-controller="tasks">
        <%= render @ctasks %>
      </div>
  </div>
</div>
